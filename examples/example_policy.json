{
  "kind": "NetworkPolicy", 
  "apiVersion": "net.alpha.kubernetes.io/v1alpha1", 
  "metadata": {
    "namespace": "default", 
    "name": "test-policy"
  },
  "spec": {
    "podSelector": {
      "tier": "backend"
    }, 
    "ingress": [
      {
        "from": [
          {
            "pods": {
              "tier": "middle"
            }
          }, 
          {
            "pods": {
              "role": "test"
            }
          }
        ], 
        "ports": [
          {
            "protocol": "TCP", 
            "port": 80
          }
        ]
      }
    ]
  }
}
